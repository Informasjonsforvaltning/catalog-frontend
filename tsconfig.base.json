{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@catalog-admin/*": ["apps/catalog-admin/*"],
      "@catalog-frontend/data-access": ["libs/data-access/src/index.ts"],
      "@catalog-frontend/types": ["libs/types/src/index.ts"],
      "@catalog-frontend/ui": ["libs/ui/src/index.ts"],
      "@catalog-frontend/utils": ["libs/utils/src/index.ts"],
      "@catalog-frontend/utils/*": ["libs/utils/*"],
      "@catalog-portal/*": ["apps/catalog-portal/*"],
      "@concept-catalog/*": ["apps/concept-catalog/*"],
      "@data-service-catalog/*": ["apps/data-service-catalog/*"],
      "@dataset-catalog/*": ["apps/dataset-catalog/*"],
      "@service-catalog/*": ["apps/service-catalog/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
